<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!-- Halaman utama saat aplikasi pertama dibuka -->
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

    <!-- Servlet untuk Login -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.tadikamesra.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <!-- Servlet untuk Beranda --><servlet>
    <servlet-name>BerandaAdmin</servlet-name>
        <servlet-class>com.tadikamesra.controller.BerandaAdminServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BerandaAdmin</servlet-name>
        <url-pattern>/admin/BerandaAdmin</url-pattern>
    </servlet-mapping>


<servlet>
    <servlet-name>ManajemenPengumuman</servlet-name>
    <servlet-class>com.tadikamesra.controller.ManajemenPengumumanServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>ManajemenPengumuman</servlet-name>
    <url-pattern>/admin/ManajemenPengumuman</url-pattern>
</servlet-mapping>

    <!-- Servlet untuk Manajemen Guru -->
<servlet>
  <servlet-name>ManajemenGuruServlet</servlet-name>
  <servlet-class>com.tadikamesra.controller.ManajemenGuruServlet</servlet-class>
</servlet>

<servlet-mapping>
  <servlet-name>ManajemenGuruServlet</servlet-name>
  <url-pattern>/admin/ManajemenGuru</url-pattern>
</servlet-mapping>

    <!-- Filter untuk Autentikasi -->
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>com.tadikamesra.controller.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/admin/ManajemenGuru</url-pattern>
    </filter-mapping>

<servlet>
    <servlet-name>BerandaSiswaServlet</servlet-name>
    <servlet-class>com.tadikamesra.controller.BerandaSiswaServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>BerandaSiswaServlet</servlet-name>
    <url-pattern>/siswa/BerandaSiswa</url-pattern>
</servlet-mapping>

<servlet>
    <servlet-name>JadwalServlet</servlet-name>
    <servlet-class>com.tadikamesra.controller.JadwalServlet</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>JadwalServlet</servlet-name>
    <url-pattern>/jadwal-siswa</url-pattern>
</servlet-mapping>

<servlet>
    <servlet-name>BerandaGuru</servlet-name>
    <servlet-class>com.tadikamesra.controller.BerandaGuruServlet</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>BerandaGuru</servlet-name>
    <url-pattern>/guru/BerandaGuru</url-pattern>
</servlet-mapping>



    <!-- Servlet Logout -->
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.tadikamesra.controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

</web-app>
