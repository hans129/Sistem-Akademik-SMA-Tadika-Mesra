<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!-- Halaman utama saat aplikasi pertama dibuka -->
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

    <!-- Servlet untuk Login -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.tadikamesra.controller.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>Beranda</servlet-name>
        <jsp-file>/beranda.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Beranda</servlet-name>
        <url-pattern>/beranda.jsp</url-pattern>
    </servlet-mapping>

    <!-- Servlet untuk Manajemen Guru -->
    <servlet>
        <servlet-name>ManajemenGuruServlet</servlet-name>
        <servlet-class>com.tadikamesra.controller.ManajemenGuruServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ManajemenGuruServlet</servlet-name>
        <url-pattern>/manajemenGuru</url-pattern>
    </servlet-mapping>
    
        <!-- Servlet untuk beranda Guru -->
        <servlet>
         <servlet-name>BerandaAdminServlet</servlet-name>
         <servlet-class>com.tadikamesra.controller.BerandaAdminServlet</servlet-class>
       </servlet>
       <servlet-mapping>
         <servlet-name>BerandaAdminServlet</servlet-name>
         <url-pattern>/admin/beranda</url-pattern>
       </servlet-mapping>



    <!-- Filter untuk Autentikasi (Opsional) -->
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>com.tadikamesra.controller.AuthFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/manajemenGuru</url-pattern>
    </filter-mapping>

</web-app>
